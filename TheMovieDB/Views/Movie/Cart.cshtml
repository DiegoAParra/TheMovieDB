@model List<TheMovieDB.Models.ShoppingCartItem>

@{
    ViewBag.Title = "Carrito";
}

<h2>carro de la compra</h2>

@if (Model.Count == 0)
{
    <p>Tu carrito de compras esta vacío.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Price</td>
                    <td>
                        @Html.ActionLink("Eliminar", "RemoveFromCart", new { movieId = item.MovieId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <h4>Total: $@(Model.Sum(x => x.Price))</h4>
        <a target="_blank" href="/Movie/Pay?format=PDF" class="btn btn-success">Pay<i class="fas fa-file"></i></a>
    </div>
}
